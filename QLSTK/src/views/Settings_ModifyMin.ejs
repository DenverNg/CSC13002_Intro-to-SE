<!DOCTYPE html>
<html lang="en">
    <head>
		<link rel="icon" href="images/SEBank.png" type="image/x-icon">
        <title>SEBANK</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="/js/func.js"></script>
		<link rel="stylesheet" href="/css/table.css">
        <script src="/js/table.js"></script>
        <link rel="stylesheet" href="/css/button.css">

        <!-- Linking Google Font Link for Icon -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
	</head>

	<body>
		<div class="container">
			<!--Có thể làm các phần tĩnh thành file riêng cho gọn-->
			<aside class="sidebar">
			<img src="/images/SEBank.png" alt="logo-hover" class="sidebar-img-default" />
			<img src="/images/Logo.png" alt="logo-hover" class="sidebar-img-hover" />
			<ul class="sidebar-links">
				<li data-content="Dashboard">
					<a href="/#">
						<span class="material-icons" style="font-size: 35px">
							home
						</span> Trang chủ
					</a>
				</li>
				<li data-content="Manage">
					<a href="/quan_ly_so#">
						<span class="material-icons" style="font-size: 35px">
							manage_search
							</span>Quản lý sổ
					</a>
				</li>
				<li>
					<a href="/bao_cao_ngay#">
						<span class="material-icons" style="font-size: 35px">
							description
						</span> Báo cáo
					</a>
				</li>
				<li class="active">
					<a href="/mat_khau#">
						<span class="material-icons" style="font-size: 35px">
						settings
						</span> Cài đặt
					</a>
				</li>
			</ul>
			</aside>

			<div class = "main">
				<!-- Thay đổi về loại kỳ hạn -->
				<div class="content" id="Settings">
					<div class="table__header">
						<div>
							<div class="topbar">
							Cài đặt
							</div>
                            <p class="date"><%= currentDate %></p>
						</div>
					</div>
					
					<section class="table__body">
                        <form action="/cai_dat/sua_min/xacnhan" method="post" class="form-verify">
                            <table>
                                <thead>
                                    <tr style="pointer-events: none;">
                                        <th><img src="/images/card.png"> Tên đại lượng </th>
                                        <th><img src="/images/star.png"> Giá trị </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < listMininum.length; i++) { %>
                                        <tr>
                                            <%if(listMininum[i].TEN == "SOTIENGUI"){ %>
                                                <td>Số tiền gửi tối thiểu</td>
                                            <% }else if(listMininum[i].TEN == "THOIGIAN"){ %>
                                                <td>Thời gian gửi tối thiểu</td>
                                            <% } %>
                                            <td>
                                                <!-- Thêm trường ẩn để lưu mã định danh -->
                                                <input type="hidden" name="TEN[]" value="<%=listMininum[i].TEN %>" />
                                                <div class="input-box" style="width:250px">
													<input style="width:140px" type="text" name="GIATRI[]" value="<%=listMininum[i].GIATRI %>" />
													<%if(i==0){ %>
                                                        <p>VND</p>
                                                    <% }else if(i==1){ %>
                                                            <p>ngày</p>
                                                    <% } %>
												</div>
                                            </td>
                                        </tr>					
                                    <% } %>
                                </tbody>
                            </table>
                            <div class="Function">
								<button class="button red" name="action" value="confirm">
									<img src="/images/save.png">
									Lưu thay đổi
								</button>

								<button class="button green" type="button"  onclick="window.location.href='/cai_dat/sua_min'">
									<img src="/images/refresh.png">
									Reset
								</button>

								<button class="button purple" name="action" value="cancel">
									<img src="/images/close.png">
									Huỷ thay đổi
								</button>	
							</div>
                        </form>
					</section>
				</div>
			</div>
		</div>
    </body>
</html>