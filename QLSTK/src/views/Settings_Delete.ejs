<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="icon" href="images/SEBank.png" type="image/x-icon">
        <title>SEBANK</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="/js/func.js"></script>
		<link rel="stylesheet" href="/css/table.css">
        <script src="/js/table.js"></script>
        <script src="/js/func_Settings_Delete.js"></script>
        <link rel="stylesheet" href="/css/page_setup.css">
        <link rel="stylesheet" href="/css/transactions.css">
        <link rel="stylesheet" href="/css/function_buttons.css">
        <link rel="stylesheet" href="/css/button.css">
        <link rel="stylesheet" href="/css/setting.css">
        <link rel="stylesheet" href="/css/setting_delete.css">

        <!-- Linking Google Font Link for Icon -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <div class="container">
            <!--Có thể làm các phần tĩnh thành file riêng cho gọn-->
            <aside class="sidebar">
                <img src="/images/SEBank.png" alt="logo-hover" class="sidebar-img-default" />
                <img src="/images/Logo.png" alt="logo-hover" class="sidebar-img-hover" />
                <ul class="sidebar-links">
                    <li data-content="Dashboard">
                        <a href="/#">
                            <span class="material-icons" style="font-size: 35px">
                                home
                            </span> Trang chủ
                        </a>
                    </li>
                    <li data-content="Manage">
                        <a href="/quan_ly_so#">
                            <span class="material-icons" style="font-size: 35px">
                                manage_search
                                </span>Quản lý sổ
                        </a>
                    </li>
                    <li>
                        <a href="/bao_cao_ngay#">
                            <span class="material-icons" style="font-size: 35px">
                                description
                            </span> Báo cáo
                        </a>
                    </li>
                    <li class="active">
                        <a href="/mat_khau#">
                            <span class="material-icons" style="font-size: 35px">
                            settings
                            </span> Cài đặt
                        </a>
                    </li>
                </ul>
            </aside>

        <div class="main main--setup">
            <!-- Thay đổi về loại kỳ hạn -->
            <div class="content content--setup" id="Manage">
                <div class="table__header">
                    <div>
                        <div class="topbar topbar--set-padding">
                            Cài đặt
                        </div>
                        <p class="date">
                            <%= currentDate %>
                        </p>
                    </div>
                </div>
                <form action="/cai_dat/xoa/xacnhan" method="post" class="form-verify content-group">
                    <section class="table__body table--no-margin">
                        <table>
                            <thead>
                                <tr style="pointer-events: none;">
                                    <th>
                                        <div class="column">
                                            <%- include('../public/images/card-pos.svg') %>
                                                <label class="column-name">Tên kỳ hạn</label>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="column">
                                            <%- include('../public/images/time.svg') %>
                                                <label class="column-name">Thời gian đáo hạn</label>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="column" style="margin-left: 15px;">
                                            <%- include('../public/images/coin.svg') %>
                                                <label class="column-name">Lãi suất</label>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="column" style="margin-left: 15px;">
                                            <%- include('../public/images/coin.svg') %>
                                                <label class="column-name">Thao tác</label>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < listTerm.length; i++) { %>
                                    <tr id="term-<%=i%>">
                                        <td>
                                            <div class="column-value">
                                                <%=listTerm[i].KYHAN %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="column-value column-value1">
                                                <%=listTerm[i].MALOAI %> tháng
                                            </div>
                                        </td>
                                        <td>
                                            <div class="column-value column-value2">
                                                <%=(listTerm[i].LAISUAT*100).toFixed(2) %>%
                                            </div>
                                        </td>
                                        <td>
                                            <div class="column-value column-value2">
                                                <input type="hidden" name="MALOAI[]" value="<%= listTerm[i].KYHAN %>" />
                                                <button type="button" class="button-secondary red" onclick="blurTerm('<%=i%>')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                <button type="button" class="button-secondary green" style="display: none;" onclick="undoBlur('<%=i%>')">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        </section>
                        <div class="button-group">
                            <button id="save" class="function-btn" name="action" value="confirm" onclick="submitDeleteForm()">
                                <%- include('../public/images/save.svg') %>
                                    <label for="save" class="function-label red">Lưu xoá</label>
                            </button>
                        
                            <button id="reset" class="function-btn" type="button" onclick="undoBlurAll()">
                                <%- include('../public/images/refresh.svg') %>
                                    <label for="reset" class="function-label green">Reset</label>
                            </button>
                        
                            <button id="cancel" class="function-btn" name="action" value="cancel">
                                <%- include('../public/images/cancel.svg') %>
                                    <label for="cancel" class="function-label">Huỷ xoá</label>
                            </button>
                        </div>
                    </form>  
            </div>
                

        </div>
    </body>
</html>