<!DOCTYPE html>
<html lang="en">
    <head>
        <title>SEBANK</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="/js/func.js"></script>
		<link rel="stylesheet" href="/css/table.css">
        <script src="/js/table.js"></script>
        <!-- Linking Google Font Link for Icon -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
	</head>

	<body>
		<div class="container">
			<!--Có thể làm các phần tĩnh thành file riêng cho gọn-->
			<aside class="sidebar">
			<img src="/images/SEBank.png" alt="logo-hover" class="sidebar-img-default" />
			<img src="/images/Logo.png" alt="logo-hover" class="sidebar-img-hover" />
			<ul class="sidebar-links">
				<li data-content="Dashboard">
					<a href="/#">
						<span class="material-icons" style="font-size: 35px">
							home
						</span> Trang chủ
					</a>
				</li>
				<li data-content="Manage">
					<a href="/quan_ly_so#">
						<span class="material-icons" style="font-size: 35px">
							manage_search
							</span>Quản lý sổ
					</a>
				</li>
				<li>
					<a href="/bao_cao_ngay#">
						<span class="material-icons" style="font-size: 35px">
							description
						</span> Báo cáo
					</a>
				</li>
				<li>
					<a href="/mat_khau#">
						<span class="material-icons" style="font-size: 35px">
						settings
						</span> Cài đặt
					</a>
				</li>
			</ul>
			</aside>

			<div class = "main">
				<!-- Thay đổi về loại kỳ hạn -->
				<div class="content" id="Settings">
					<div class="table__header">
						<div>
							<div class="topbar">
							Cài đặt
							</div>
							<p class="date" id="Manage-date"></p>
						</div>
					</div>
					<section class="table__body">
						<form action="/cai_dat/sua/xacnhan" method="post" class="form-verify">
							<table>
								<thead>
									<tr>
										<th> Tên kỳ hạn <span class="icon-arrow">&UpArrow;</span></th>
										<th> Thời gian đáo hạn <span class="icon-arrow">&UpArrow;</span></th>
										<th> Lãi suất <span class="icon-arrow">&UpArrow;</span></th>
									</tr>
								</thead>
								<tbody>
									<% for (let i = 0; i < listTerm.length; i++) { %>
										<tr>
											<td><%=listTerm[i].KYHAN %></td>
											<td><%=listTerm[i].MALOAI %> tháng</td>
											<td>
												<!-- Thêm trường ẩn để lưu mã định danh -->
												<input type="hidden" name="MALOAI[]" value="<%= listTerm[i].MALOAI %>" />
												<input type="text" name="LAISUAT[]" value="<%= (listTerm[i].LAISUAT * 100).toFixed(2) %>" />%
											</td>
										</tr>
									<% } %>
								</tbody>
							</table>
							<button class="form-group__button" name="action" value="confirm">Lưu</button>
							<button class="form-group__button" name="action" value="cancel">Huỷ thay đổi</button>
						</form>
					</section>

					<section class="table__body">
						<table>
							<thead>
								<tr>
									<th> Tên đại lượng <span class="icon-arrow">&UpArrow;</span></th>
									<th> Giá trị <span class="icon-arrow">&UpArrow;</span></th>
								</tr>
							</thead>
							<tbody>
								<% for (let i = 0; i < listMininum.length; i++) { %>
									<tr>
										<%if(listMininum[i].TEN == "SOTIENGUI"){ %>
											<td>Số tiền gửi tối thiểu</td>
										<% }else if(listMininum[i].TEN == "THOIGIAN"){ %>
											<td>Thời gian gửi tối thiểu</td>
										<% } %>
										<td><%=listMininum[i].GIATRI %></td>
									</tr>					
								<% } %>
							</tbody>
						</table>
						<button class="form-group__button" onclick="window.location.href='/cai_dat/xoa'">Sửa</button>
					</section>
				</div>
			</div>
		</div>
    </body>
</html>