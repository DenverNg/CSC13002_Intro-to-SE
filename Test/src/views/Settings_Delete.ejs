<!DOCTYPE html>
<html lang="en">
    <head>
        <title>SEBANK</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="/js/func.js"></script>
		<link rel="stylesheet" href="/css/table.css">
        <script src="/js/table.js"></script>
        <script src="/js/func_Settings_Delete.js"></script>
        <!-- Linking Google Font Link for Icon -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <div class="container">
            <!--Có thể làm các phần tĩnh thành file riêng cho gọn-->
            <aside class="sidebar">
                <img src="/images/SEBank.png" alt="logo-hover" class="sidebar-img-default" />
                <img src="/images/Logo.png" alt="logo-hover" class="sidebar-img-hover" />
                <ul class="sidebar-links">
                    <li data-content="Dashboard">
                        <a href="/#">
                            <span class="material-icons" style="font-size: 35px">
                                home
                            </span> Trang chủ
                        </a>
                    </li>
                    <li data-content="Manage">
                        <a href="/quan_ly_so#">
                            <span class="material-icons" style="font-size: 35px">
                                manage_search
                                </span>Quản lý sổ
                        </a>
                    </li>
                    <li>
                        <a href="/bao_cao_ngay#">
                            <span class="material-icons" style="font-size: 35px">
                                description
                            </span> Báo cáo
                        </a>
                    </li>
                    <li>
                        <a href="/cai_dat#">
                            <span class="material-icons" style="font-size: 35px">
                            settings
                            </span> Cài đặt
                        </a>
                    </li>
                </ul>
            </aside>

        <div class = "main">
            <!-- Thay đổi về loại kỳ hạn -->
            <div class="content" id="Manage">
                <div class="table__header">
                    <div>
                        <div class="topbar">
                        Cài đặt
                        </div>
                        <p class="date" id="Manage-date"></p>
                    </div>
                </div>
                <section class="table__body">
                    <table>
                            <thead>
                                <tr>
                                    <th> Tên kỳ hạn </th>
                                    <th> Thời gian đáo hạn </th>
                                    <th> Lãi suất </th>
                                    <th> Thao tác </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < listTerm.length; i++) { %>
                                    <tr id="term-<%=i%>">
                                        <td><%=listTerm[i].KYHAN %></td>
                                        <td><%=listTerm[i].MALOAI %> tháng</td>
                                        <td><%=(listTerm[i].LAISUAT*100).toFixed(2) %>%</td>
                                        <td>
                                            <button type="button" class="btn btn-danger" onclick="blurTerm('<%=i%>')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <button type="button" class="btn btn-secondary" onclick="undoBlur('<%=i%>')">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        <style>
                            .blurred {
                            opacity: 0.5;  /* Makes the row semi-transparent */
                            transition: opacity 0.5s ease; /* Smooth transition */
                            }
                        </style>
                </section>
            </div>
            <div class="form-group">
                <button type="deleteTerm" class="form-group__button" name="action" value="deleteTerm">Xoá</button>
                <button class="form-group__button" onclick="undoBlurAll()">Huỷ xoá</button>
            </div>
        </div>
    </body>
</html>