<!DOCTYPE html>
<html lang="en">
    <head>
        <title>SEBANK</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/main.css">
        <script src="/js/func.js"></script>
		<link rel="stylesheet" href="/css/table.css">
        <script src="/js/table.js"></script>
        <!-- Linking Google Font Link for Icon -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <div class="container">
        <aside class="sidebar">
        <img src="/images/SEBank.png" alt="logo-hover" class="sidebar-img-default" />
        <img src="/images/Logo.png" alt="logo-hover" class="sidebar-img-hover" />
        <ul class="sidebar-links">
            <li data-content="Dashboard">
                <a href="#">
                    <span class="material-icons" style="font-size: 35px">
                        home
                    </span> Trang chủ
                </a>
            </li>
            <li data-content="Manage">
                <a href="#">
                    <span class="material-icons" style="font-size: 35px">
                        manage_search
                        </span>Quản lý sổ
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="material-icons" style="font-size: 35px">
                        description
                    </span> Báo cáo
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="material-icons" style="font-size: 35px">
                    settings
                    </span> Cài đặt
                </a>
            </li>
        </ul>
       	</aside>

	  <div class = "main">
		<!-- Quản lý sổ -->
		<div class="content" id="Manage">
			<div class="table__header">
				<div>
					<div class="topbar">
					Quản lý sổ
					</div>
					<p class="date" id="Manage-date"></p>
				</div>
				<div class="input-group">
					<input type="search" placeholder="Search Data...">
				</div>
			</div>
			<section class="table__body">
				<table>
						<thead>
							<tr>
								<th> STT <span class="icon-arrow">&UpArrow;</span></th>
								<th> Mã sổ <span class="icon-arrow">&UpArrow;</span></th>
								<th> Khách hàng <span class="icon-arrow">&UpArrow;</span></th>
								<th> Trạng thái <span class="icon-arrow">&UpArrow;</span></th>
								<th> Số dư <span class="icon-arrow">&UpArrow;</span></th>
							</tr>
						</thead>
						<tbody>
							<% for (let i = 0; i < listBooks.length; i++) { %>
								<tr>
									<td><%=i%></td>
									<td><%= listBooks[i].MASO %></td>
									<td><%= listBooks[i].HOTEN %></td>
									<% if (listBooks[i].TRANGTHAI == 1) { %>
										<td>
										  <p class="status shipped">Đang hoạt động</p>
										</td>
									<% } else { %>
										<td>
										  <p class="status cancelled">Đã đóng</p>
										</td>
									<% } %>
									<td><%= listBooks[i].SODU %></td>
								</tr>
							<% } %>
						</tbody>
					</table>
			</section>
       	</div>

		<!--code css for button-->
		<style>
			.form-group__button {
				background-color: #4CAF50;
				color: white;
				padding: 14px 20px;
				margin: center;
				border: none;
				cursor: pointer;
				width: 350;
			}
			.form-group__button:hover {
				opacity: 0.8;
			}
		</style>
		<!--Click button navigate to CreateBook-->
		<div class="form-group">
			<button class="form-group__button" onclick="window.location.href='/taoso_form'">Tạo sổ mới</button>
		</div>
	</div>
	<script src="date.js"></script>
 		<script>
    		const currentDayDashboard = document.getElementById('Dashboard-date');
			const currentDayManage = document.getElementById('Manage-date');
    		currentDayDashboard.textContent = getCurrentDate();
			currentDayManage.textContent = getCurrentDate();
  		</script>
    </body>
</html>